@model FinDeSession.Models.LoginInfo

@{
    Layout = null;
    ViewBag.Title = "FirstLogin";
}
<link href="~/Style/StyleSheet1.css" rel="stylesheet" />
<h2>FirstLogin</h2>

@using (Html.BeginForm("InitializeLogin", "Student"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>You must create a username and password for yourself</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">Username</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Password</div>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Index")
</div>
