@using System.Linq;
@using FinDeSession.Models;
@{
    Layout = null;
    ViewBag.Title = "ViewResources";
}

<h2>View Resources</h2>
<table>
    <tr>
        <th>ID</th>
        <th>Type</th>
        <th>URL</th>
    </tr>
    @{
        DataClasses1DataContext db = new DataClasses1DataContext();
        Data data = new Data();
        int c_id = Convert.ToInt32(Request.QueryString["c_id"]);
        List<Resource> lstRes = data.courseResources(c_id);

        foreach (Resource r in lstRes)
        {
            <tr>
                <td>@r.ID</td>
                <td>@r.type</td>
                <td>@r.url</td>
            </tr>
        }
    }
</table>